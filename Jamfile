Objects $(NAMES:S=.cpp) ;

if $(OS) = MACOSX {
	MKLROOT = /opt/intel/Compiler/11.1/089/Frameworks/mkl ;
} else {
	MKLROOT = /opt/intel/mkl/10.0.5.025 ;
}
MKLPATH = $(MKLROOT)/lib/em64t ;
MKLINCLUDE = $(MKLROOT)/include ;

ObjectC++Flags $(NAMES) : $(SDLC++FLAGS) -DATI_HACK -I/opt/local/include -I$(MKLINCLUDE) -Wno-unused-function -std=c++0x ;

GraphicsFlags $(NAMES) ;

ObjectC++Flags GradientStuff FFTPaintModule : -I../fftw-3.1.2/api ;

FFMPEGC++FLAGS = ;
FFMPEGLINKLIBS = -lavcodec -lavformat -lavfilter -lswscale -lavutil ;

ObjectC++Flags VidStream.cpp VideoModule.cpp : $(FFMPEGC++FLAGS) ;

EXECNAME = hack ;

LINKLIBS on dist/$(EXECNAME) += $(FFMPEGLINKLIBS) "`sdl-config --libs`" $(GRAPHICS_LIBS) -L$(MKLPATH) -lmkl_intel_lp64 -lmkl_intel_thread -lmkl_core -lmkl_lapack ; #-L../fftw-3.1.2/.libs -lfftw3f

if $(OS) = MACOSX {
	LINKLIBS on dist/$(EXECNAME) += -framework OpenGL ; #-L../fftw-3.1.2/.libs -lfftw3f
} else {
	LINKLIBS on dist/$(EXECNAME) += -liomp5 -lGL -lGLU -lpthread ;
}

if $(OS) = NT {
	Resource icons.res : Icons/icons.rc ;
	LinkResource dist/$(EXECNAME) : icons.res ;
}

File dist$(SEP)gentium.txf : Graphics$(SEP)fonts$(SEP)gentium.txf ; 

MainFromObjects dist/$(EXECNAME) : $(NAMES:S=$(SUFOBJ)) $(GRAPHICS_OBJECTS) $(LIBRARY_OBJECTS) $(CHARACTER_OBJECTS) Basis/Error.o Basis/ListDir.o ;
